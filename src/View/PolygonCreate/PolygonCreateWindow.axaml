<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="src.View.PolygonCreate.PolygonCreateWindow"
        Title="Create Polygon"
        Width="300"
        Height="250">
    <StackPanel>
        <TextBox x:Name="Count"/>
        <TextBox x:Name="Measure"/>
        <TextBox x:Name="Radius"/>
        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Margin="0 5" />
        <Button Content="Save" Click="SaveButtonClick" />
    </StackPanel>
</Window>
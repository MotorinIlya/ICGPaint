<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        x:Class="src.View.MainWindow"
        Title="ICGPaint"
        MinHeight="480"
        MinWidth="800"
        FontFamily="Segoe UI"
        Background="#1A1A1A">
        
    <Window.Styles>
        <Style Selector="ToggleButton">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style Selector="ToggleButton:checked">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="BorderBrush" Value="#005F9E"/>
        </Style>

        <Style Selector="ToggleButton:hover">
            <Setter Property="Background" Value="#3D3D3D"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style Selector="Button:hover">
            <Setter Property="Background" Value="#3D3D3D"/>
        </Style>

        <Style Selector="Button.color-button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="2 0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Styles>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="Load" Click="OnLoadImageClick"/>
                    <MenuItem Header="Save" Click="OnSaveImageClick"/>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Tools">
                        <MenuItem Header="Pencil" Click="OnPencilToolClick"/>
                        <MenuItem Header="Line" Click="OnLineToolClick"/>
                        <MenuItem Header="Fill" Click="OnFillToolClick"/>
                        <MenuItem Header="Polygons" Click="OnPolygonToolClick"/>
                    </MenuItem>
                    <MenuItem Header="Clear" Click="OnClearClick"/>
                </MenuItem>
                <MenuItem Header="About" Click="OnAboutClick"/>
            </Menu>
        </DockPanel>

        <Border Grid.Row="1" 
                Background="#252526" 
                Height="48"
                BorderBrush="#333333"
                BorderThickness="0 0 0 1">
            
            <Grid Margin="8 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" 
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Spacing="4"
                            x:Name="Buttons">
                    
                    <ToggleButton x:Name="Pencil" ToolTip.Tip="–ö–∞—Ä–∞–Ω–¥–∞—à">‚úè</ToggleButton>
                    <ToggleButton x:Name="Line" ToolTip.Tip="–õ–∏–Ω–∏—è">üìè</ToggleButton>
                    <ToggleButton x:Name="Fill" ToolTip.Tip="–ó–∞–ª–∏–≤–∫–∞">üé®</ToggleButton>
                    <ToggleButton x:Name="Polygon" ToolTip.Tip="–§–∏–≥—É—Ä—ã">üñá</ToggleButton>
                    <Button x:Name="Clear" ToolTip.Tip="–°—Ç–µ—Ä–µ—Ç—å –≤—Å—ë">üßΩ</Button>
                    
                    <Separator Background="#ffffff" Margin="5 0" Width="1" Height="30"/>
                    
                    <Button x:Name="ColorPickerButton" 
                            Content="üé®" 
                            ToolTip.Tip="–í—ã–±–æ—Ä —Ü–≤–µ—Ç–∞"/>
                    
                    <Button x:Name="BlackColor" 
                            Background="Black" 
                            Classes="color-button"
                            ToolTip.Tip="–ß–µ—Ä–Ω—ã–π"/>
                    
                    <Button x:Name="RedColor" 
                            Background="Red" 
                            Classes="color-button"
                            ToolTip.Tip="–ö—Ä–∞—Å–Ω—ã–π"/>
                    
                    <Button x:Name="GreenColor" 
                            Background="Lime" 
                            Classes="color-button"
                            ToolTip.Tip="–ó–µ–ª–µ–Ω—ã–π"/>
                    
                    <Button x:Name="BlueColor" 
                            Background="Blue" 
                            Classes="color-button"
                            ToolTip.Tip="–°–∏–Ω–∏–π"/>

                    <Separator Background="#ffffff" Margin="5 0" Width="1" Height="30"/>

                    <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                        <TextBox Width="60" 
                                Text="{Binding Value, ElementName=ThicknessSlider, Mode=TwoWay, StringFormat='{}{0:F0}'}"
                                Margin="4 0"
                                ToolTip.Tip="–¢–æ–ª—â–∏–Ω–∞ –ª–∏–Ω–∏–∏"
                                Foreground="White"
                                Background="#333333"/>
                        <Slider x:Name="ThicknessSlider"
                                Minimum="1"
                                Maximum="50"
                                Width="120"
                                Value="2"
                                ToolTip.Tip="–¢–æ–ª—â–∏–Ω–∞ –ª–∏–Ω–∏–∏"
                                Margin="4 0"/>
                    </StackPanel>
                    
                    <Separator Background="#ffffff" Margin="5 0" Width="1" Height="30"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
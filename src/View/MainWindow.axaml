<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        x:Class="src.View.MainWindow"
        Title="ICGPaint"
        MinHeight="480"
        MinWidth="800"
        FontFamily="Segoe UI"
        Background="#1A1A1A">
        
    <Window.Styles>
        <Style Selector="ToggleButton">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style Selector="ToggleButton:checked">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="BorderBrush" Value="#005F9E"/>
        </Style>

        <Style Selector="ToggleButton:hover">
            <Setter Property="Background" Value="#3D3D3D"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style Selector="Button:hover">
            <Setter Property="Background" Value="#3D3D3D"/>
        </Style>

        <!-- –°—Ç–∏–ª—å –¥–ª—è —Ü–≤–µ—Ç–Ω—ã—Ö –∫–Ω–æ–ø–æ–∫ -->
        <Style Selector="Button.color-button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="2 0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Styles>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- –í–µ—Ä—Ö–Ω—è—è –ø–∞–Ω–µ–ª—å –∏–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç–æ–≤ -->
        <Border Grid.Row="0" 
                Background="#252526" 
                Height="48"
                BorderBrush="#333333"
                BorderThickness="0 0 0 1">
            
            <Grid Margin="8 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- –õ–µ–≤–∞—è —á–∞—Å—Ç—å -->
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Button x:Name="Settings" Content="‚öô Settings" />
                    <Separator Background="#333333" Margin="10 0" Width="1"/>
                </StackPanel>

                <!-- –ò–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç—ã -->
                <StackPanel Orientation="Horizontal" 
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Spacing="4">
                    
                    <ToggleButton x:Name="Pencil" ToolTip.Tip="–ö–∞—Ä–∞–Ω–¥–∞—à">‚úè</ToggleButton>
                    <ToggleButton x:Name="Line" ToolTip.Tip="–õ–∏–Ω–∏—è">üìè</ToggleButton>
                    <ToggleButton x:Name="Fill" ToolTip.Tip="–ó–∞–ª–∏–≤–∫–∞">üé®</ToggleButton>
                    <ToggleButton x:Name="Polygon" ToolTip.Tip="–§–∏–≥—É—Ä—ã">üñá</ToggleButton>
                    <Button x:Name="Clear" ToolTip.Tip="–°—Ç–µ—Ä–µ—Ç—å –≤—Å—ë">üßΩ</Button>
                    
                    <Separator Background="#333333" Margin="10 0" Width="1"/>
                    
                    <!-- –ö–Ω–æ–ø–∫–∏ —Ü–≤–µ—Ç–∞ -->
                    <Button x:Name="ColorPickerButton" 
                            Content="üé®" 
                            ToolTip.Tip="–í—ã–±–æ—Ä —Ü–≤–µ—Ç–∞"/>
                    
                    <Button x:Name="BlackColor" 
                            Background="Black" 
                            Classes="color-button"
                            ToolTip.Tip="–ß–µ—Ä–Ω—ã–π"/>
                    
                    <Button x:Name="RedColor" 
                            Background="Red" 
                            Classes="color-button"
                            ToolTip.Tip="–ö—Ä–∞—Å–Ω—ã–π"/>
                    
                    <Button x:Name="GreenColor" 
                            Background="Lime" 
                            Classes="color-button"
                            ToolTip.Tip="–ó–µ–ª–µ–Ω—ã–π"/>
                    
                    <Button x:Name="BlueColor" 
                            Background="Blue" 
                            Classes="color-button"
                            ToolTip.Tip="–°–∏–Ω–∏–π"/>
                    
                    <Separator Background="#333333" Margin="10 0" Width="1"/>
                    
                    <!-- –ö–Ω–æ–ø–∫–∞ —Ç–æ–ª—â–∏–Ω—ã –ª–∏–Ω–∏–∏ -->
                    <Button x:Name="ThicknessButton" 
                            Content="–¢–æ–ª—â–∏–Ω–∞: 2px" 
                            ToolTip.Tip="–ò–∑–º–µ–Ω–∏—Ç—å —Ç–æ–ª—â–∏–Ω—É –ª–∏–Ω–∏–∏"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- –û–±–ª–∞—Å—Ç—å —Ä–∏—Å–æ–≤–∞–Ω–∏—è -->
        <ContentControl Grid.Row="1" 
                      Background="#1E1E1E"
                      x:Name="DrawingArea"/>

        <!-- –°—Ç–∞—Ç—É—Å-–±–∞—Ä -->
        <Border Grid.Row="2" 
              Background="#252526"
              Height="24"
              BorderBrush="#333333"
              BorderThickness="0 1 0 0">
            <TextBlock Text="Ready" 
                     Foreground="Gray"
                     VerticalAlignment="Center"
                     Margin="8 0"/>
        </Border>
    </Grid>
</Window>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        x:Class="src.View.MainWindow"
        Title="ICGPaint"
        MinHeight="480"
        MinWidth="800"
        FontFamily="Segoe UI"
        Background="#1A1A1A">
        
    <Window.Styles>
        <Style Selector="ToggleButton">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style Selector="ToggleButton:checked">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="BorderBrush" Value="#005F9E"/>
        </Style>

        <Style Selector="ToggleButton:hover">
            <Setter Property="Background" Value="#3D3D3D"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style Selector="Button:hover">
            <Setter Property="Background" Value="#3D3D3D"/>
        </Style>
    </Window.Styles>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <Border Grid.Row="0" 
                Background="#252526" 
                Height="48"
                BorderBrush="#333333"
                BorderThickness="0 0 0 1">
            
            <Grid Margin="8 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side -->
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Button x:Name="Settings" Content="‚öô Settings" />
                    <Separator Background="#333333" Margin="10 0" Width="1"/>
                </StackPanel>

                <!-- Tools -->
                <StackPanel Orientation="Horizontal" 
                          Grid.Column="1"
                          HorizontalAlignment="Left"
                          Spacing="4">
                    
                    <ToggleButton x:Name="Pencil" ToolTip.Tip="Pencil Tool (P)">‚úè Pencil</ToggleButton>
                    <ToggleButton x:Name="Line" ToolTip.Tip="Line Tool (L)">üìè Line</ToggleButton>
                    <ToggleButton x:Name="Fill" ToolTip.Tip="Fill Tool (F)">üé® Fill</ToggleButton>
                    <ToggleButton x:Name="Polygon" ToolTip.Tip="Polygon Tool (S)">üñá Polygon</ToggleButton>
                    
                    <Separator Background="#333333" Margin="10 0" Width="1"/>
                    
                    <Button x:Name="Color" ToolTip.Tip="Color Picker (C)">üåà Color</Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Drawing Area -->
        <ContentControl Grid.Row="1" 
                      Background="#1E1E1E"
                      x:Name="DrawingArea"/>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
              Background="#252526"
              Height="24"
              BorderBrush="#333333"
              BorderThickness="0 1 0 0">
            <TextBlock Text="Ready" 
                     Foreground="Gray"
                     VerticalAlignment="Center"
                     Margin="8 0"/>
        </Border>
    </Grid>
</Window>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480"
        x:Class="src.View.MainWindow"
        Title="src"
        MinHeight="480"
        MinWidth="640">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid x:Name="Buttons" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                    Background="LightGray">
                <Button x:Name="Settings">Settings</Button>
            </StackPanel>

            <StackPanel Background="LightGray"
                    Orientation="Horizontal"
                    Grid.Column="1">
                
                <Button x:Name="Pencil">Pencil</Button>
                <Button x:Name="Line">Line</Button>
                <Button x:Name="Fill">Fill</Button>
                <Button x:Name="Color">Color</Button>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
